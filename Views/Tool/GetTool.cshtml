    $(document).on("click", ".checkOutBtn", function () {
    let toolId = $(this).data("toolid");
    let toolName = $(this).data("toolname");

    $("#checkoutToolId").val(toolId);
    $("#checkoutToolName").val(toolName);
    $("#checkoutToolDisplay").val(toolName);

    // Fetch available serials
    $.get('@Url.Action("GetAvailableSerials","Tool")', { toolId: toolId }, function (data) {
        // Clear options
        $('#checkOutSerials').empty();
        //console.log(data)
        var lstSerials = data;
        // Append all POs
        $.each(lstSerials, function (index, item) {
            $('#checkOutSerials').append(new Option(item.ToolName, item.SerialId));
        });

        // Reinitialize multiselect
        $('#checkOutSerials').multiselect('destroy');
        initializeMultiselect("checkOutSerials");

        // Step 1: Select all by default
        $('#checkOutSerials').multiselect('selectAll', false);

        $.each(lstSerials, function (index, item) {
            if (item.IsExist == 1) {
                $("#checkOutSerials option[value='" + item.SerialId + "']").prop("disabled", true);
            }
        });

        // Refresh multiselect after disabling
        $('#checkOutSerials').multiselect('refresh');


        $('#checkOutSerials').multiselect('updateButtonText');
    });
    $("#checkOutModal").modal("show");
});

    $("#btnCheckout").click(function (e) {
    e.preventDefault();

    let selectedSerials = $("#checkOutSerials").val();
    console.log(selectedSerials)
    $.ajax({
        url: '@Url.Action("CheckOut","Tool")',
        type: 'POST',
        data: {
            toolId: $("#checkoutToolId").val(),
            serialIds: selectedSerials, // array of selected serials
            expectedReturn: $("#expectedReturnDate").val(),
            notes: $("#checkOutCondition").val(),
            checkOutDateTime: $("#checkOutDateTime").val()
        },
        traditional: true, // important for array serialization
        success: function (response) {
            if (response.success) {
                MsgToast("Success!", "Tool Checked Out successfully", "success");
                $("#checkOutModal").modal("hide");
                OpenPage('\\Tool\\GetTool');
            } else {
                MsgToast("Error!", response.message, "error");
            }
        },
        error: function () {
            MsgToast("Error!", "Error while processing Check-Out.", "error");
        }
    });
});

