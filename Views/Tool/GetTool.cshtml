    function TransactionDtl(toolId) {
        $('#TransactionModal').modal('show');

        $.ajax({
            url: '/Tool/GetToolTransaction',
            cache: false,
            type: 'GET',
            data: {
                toolId: toolId,
            },
            datatype: JSON,
            success: function (data) {
                var lstToolTransaction = [];
                lstToolTransaction = data.lstToolTransaction; debugger
                $('#transactionTable tbody').empty();
                // Iterate over selected rows and append to table
                for (var i = 0; i < lstToolTransaction.length; i++) {

                    var row = lstToolTransaction[i];

                    var rowDataHtml = '<tr>' +
                        '<td hidden>' + row['TranId'] + '</td>' +
                        '<td>' + row['ToolSerialIds'] + '</td>' +
                        '<td>' + row['ToolName'] + '</td>' +
                        '<td>' + row['UserName'] + '</td>' +
                        '<td>' + row['TranType'] + '</td>' +
                        '<td>' + row['TranQty'] + '</td>' +
                        '<td>' + row['TranDate'] + '</td>' +
                        '<td>' + (row['ExpectedReturnDate'] ? row['ExpectedReturnDate'] : '-') + '</td>' +
                        '<td>' + (row['PossessionDuration'] ?? '-') + '</td>' +
                        '<td>' + (row['Notes'] ?? '') + '</td>' +
                        '</tr>';

