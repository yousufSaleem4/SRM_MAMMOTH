<script>
    $("#btnMoveToInventory").prop("disabled", true);

    $(document).on("change", "#chkSelectAll", function () {

        let isChecked = $(this).is(":checked");

        $(".chkRepairSelect").prop("checked", isChecked);

        $("#btnMoveToInventory").prop("disabled",
            $(".chkRepairSelect:checked").length === 0
        );
    });


    $(document).on("change", ".chkRepairSelect", function () {

        let selectedCount = $(".chkRepairSelect:checked").length;

        if (selectedCount > 0) {
            $("#btnMoveToInventory").prop("disabled", false);
        } else {
            $("#btnMoveToInventory").prop("disabled", true);
        }
    });




    $(document).off("click", "#btnMoveToInventory").on("click", "#btnMoveToInventory", function () {

        let selected = [];

        $(".chkRepairSelect:checked").each(function () {
            selected.push({
                ToolId: $(this).data("toolid"),
                SerialNumber: $(this).data("serial")
            });
        });

        if (selected.length === 0) {
            MsgToast("Warning!", "Please select at least one tool.", "warning");
            return;
        }

        // Prevent double-click
        $("#btnMoveToInventory").prop("disabled", true);

        $.ajax({
            url: "/Tool/MoveToolToInventory",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify({ list: selected }),
            success: function (res) {
                if (res.success) {
                    MsgToast("Success!", res.message, "success");

                    LoadData();
                } else {
                    MsgToast("Error!", res.message, "error");
                }
            },
            complete: function () {
                $("#btnMoveToInventory").prop("disabled", false);
            }
        });

    });






    ToggleDataList(false);

    LoadData();
    function LoadData(status = "") {
        $('#tblBody').empty();
        $('#lstGetToolRepair').DataTable().clear();
        $('#lstGetToolRepair').DataTable().destroy();
  
        var isSingleRow = false;

        $.ajax({

            cache: false,
            type: 'GET',
            url: '/Tool/GetToolRepairList',
            data: {
                Status: status
            },
            datatype: JSON,
            success: function (data) {
                $('#filterString').append(data.filterString);
                $('#tblBody').empty();
              
               
                if (!isSingleRow) {
                    var columnDef = [
                        {
                            "data": null,
                            "title": "<input type='checkbox' id='chkSelectAll' />",
                            "className": "text-center",
                             "width": "30px",
                            "orderable": false,
                            "render": function (data, type, row) {
                                return `<input type="checkbox" class="chkRepairSelect" data-toolid="${row.ToolId}" data-serial="${row.SerialNumber}">`;
                            }
                        },
                        { "data": "ToolId", "title": "ToolId", "className": "text-center", "visible": false },
                        { "data": "ToolName", "title": "Tool Name", "className": "text-center" },
                        {
                            "data": "Status", "title": "Status", "className": "text-center"
                        },

                        { "data": "SerialNumber", "title": "Serial Number", "className": "text-center" },

                        // Total Qty
                        { "data": "ReportedByName", "title": "Consumer Name", "className": "text-center" },

                        // Available Qty
                        {
                            "data": "ReportedDate", "title": "Updated Date", "className": "text-center",
                            "render": function (data) {
                                if (!data) return "";

                                // Already formatted? (backend)
                                if (data.includes(".")) {
                                    // remove seconds if present
                                    let parts = data.split(":");
                                    return parts.length >= 2
                                        ? parts[0] + ":" + parts[1]    // keep only HH:mm
                                        : data;
                                }

                                let dateObj = new Date(data);

                                let yyyy = dateObj.getFullYear();
                                let MM = String(dateObj.getMonth() + 1).padStart(2, '0');
                                let dd = String(dateObj.getDate()).padStart(2, '0');
                                let hh = String(dateObj.getHours()).padStart(2, '0');
                                let mm = String(dateObj.getMinutes()).padStart(2, '0');

                                return `${yyyy}.${MM}.${dd} ${hh}:${mm}`;
                            }
                        },

                        { "data": "Hours", "title": "Consumed Hours", "className": "text-center" },

                        {
                            "data": "Rating",
                             "width": "120px",
                            "title": "Rating",
                            "className": "text-center",
                            "render": function (data) {
                                let rating = parseInt(data || 0);
                                let stars = "";

                                for (let i = 0; i < rating; i++) {
                                    stars += "⭐";
                                }

                                return stars || "-";
                            }
                        }


                        


                    ];



                    ToggleDataList(true);

                    MakeDataGridForTraining('lstGetToolRepair', data.lstGetToolRepair, 0, columnDef, 'buttons', true, true, false, false);

                }
                if (data["ErrorMessage"] != null) {
                    $('.dataTables_empty > p').text(data["ErrorMessage"]);
                }
            },

            onerror: function (r) { r },
            failure: function (r) { r }
        });
    }

