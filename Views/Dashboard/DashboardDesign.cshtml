@model PlusCP.Models.DashboardModel
@{
    ViewBag.Title = "Tool Crib Dashboard Index";
    Layout = null;
}

@{
    ViewBag.Title = "Tool Crib Dashboard";
    Layout = null;   // change/remove if you use a shared layout
}

@{
    ViewBag.Title = "Tool Crib Dashboard";
    Layout = null;   // change/remove if you use a shared layout
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 3.3.7 CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>

    <style>
        body {
            background-color: #f9fafb;
            font-family: "Helvetica Neue", Arial, sans-serif;
        }

        .navbar-dashboard {
            background-color: #ffffff;
            border-bottom: 1px solid #e5e5e5;
            margin-bottom: 0;
        }

        .navbar-dashboard .navbar-brand {
            font-weight: 600;
            font-size: 20px;
        }

        .navbar-dashboard .navbar-nav > li > a {
            color: #111;
            font-weight: 500;
            padding-top: 18px;
            padding-bottom: 18px;
        }

        .navbar-dashboard .navbar-nav > li > a:hover,
        .navbar-dashboard .navbar-nav > li > a:focus {
            background-color: transparent;
            color: #f4b400;
        }

        .navbar-dashboard .navbar-right > li > a {
            font-weight: 600;
        }

        .dashboard-wrapper {
            padding: 25px 40px; /* left & right space */
        }

        .stat-row {
            margin-bottom: 25px;
        }

        .stat-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,.04);
            padding: 18px 20px;
            margin-bottom: 20px;
            border: 1px solid #f1f1f1;
            position: relative;
            overflow: hidden;
        }

        .stat-card:before {
            content: "";
            position: absolute;
            right: -40px;
            top: -40px;
            width: 120px;
            height: 120px;
            background-color: rgba(244, 180, 0, 0.14);
            border-radius: 50%;
        }

        .stat-card .icon {
            font-size: 26px;
            color: #f4b400;
            margin-bottom: 8px;
        }

        .stat-card-title {
            font-size: 13px;
            color: #7a7a7a;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: .06em;
        }

        .stat-card-value {
            font-size: 26px;
            font-weight: 600;
            margin-top: 4px;
            color: #111;
        }

        .panel-dashboard {
            background-color: #ffffff;
            border-radius: 10px;
            border: 1px solid #f1f1f1;
            padding: 18px 20px 10px;
            margin-bottom: 25px;
            box-shadow: 0 4px 10px rgba(0,0,0,.04);
        }

        .panel-dashboard h4 {
            margin-top: 0;
            margin-bottom: 15px;
            font-size: 16px;
            font-weight: 600;
        }

        /* all charts */
        canvas {
            width: 100% !important;
            height: 260px !important;
        }

        /* donut chart: perfectly centered, no weird stretch */
        .chart-donut-wrapper {
            height: 260px;
            max-width: 260px;
            margin: 5px auto 0;
        }

        @@media (max-width: 767px) {
            .dashboard-wrapper {
                padding: 15px;
            }
        }
    </style>
</head>
<body>



    <!-- DASHBOARD -->
    <div class="dashboard-wrapper">
        <div class="container-fluid">

            <!-- COUNTERS (now 6 cards including Maintenance Tools) -->
            <div class="row stat-row">
                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-user"></span>
                        </div>
                        <p class="stat-card-title">Total Users</p>
                        <p class="stat-card-value">25</p>
                    </div>
                </div>

                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-briefcase"></span>
                        </div>
                        <p class="stat-card-title">Total Tools</p>
                        <p class="stat-card-value">210</p>
                    </div>
                </div>

                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-ok-circle"></span>
                        </div>
                        <p class="stat-card-title">Available</p>
                        <p class="stat-card-value">135</p>
                    </div>
                </div>

                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-export"></span>
                        </div>
                        <p class="stat-card-title">Checked Out</p>
                        <p class="stat-card-value">55</p>
                    </div>
                </div>

                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-import"></span>
                        </div>
                        <p class="stat-card-title">Checked In</p>
                        <p class="stat-card-value">20</p>
                    </div>
                </div>

                <!-- NEW CARD: Maintenance Tools Count -->
                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-wrench"></span>
                        </div>
                        <p class="stat-card-title">Maintenance Tools</p>
                        <p class="stat-card-value">15</p>
                    </div>
                </div>
            </div>

            <!-- ROW 1 CHARTS -->
            <div class="row">
                <div class="col-md-6">
                    <div class="panel-dashboard">
                        <h4>Tools Distribution</h4>
                        <div class="chart-donut-wrapper">
                            <canvas id="toolsDistributionChart"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="panel-dashboard">
                        <h4>Top 5 Most Used Tools</h4>
                        <canvas id="topToolsChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- ROW 2 CHARTS -->
            <div class="row">
                <div class="col-md-6">
                    <div class="panel-dashboard">
                        <h4>Checked Out Tools - Weekly</h4>
                        <canvas id="weeklyCheckoutChart"></canvas>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="panel-dashboard">
                        <h4>Maintenance Activity</h4>
                        <canvas id="maintenanceChart"></canvas>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- jQuery + Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!-- Chart.js DATA -->
    <script>
        var primaryYellow = '#f4b400';
        var lightYellow = 'rgba(244,180,0,0.20)';

        // ***** TOOLS DISTRIBUTION - CLEAN DONUT LOOK *****
        var ctxDist = document.getElementById('toolsDistributionChart').getContext('2d');
        new Chart(ctxDist, {
            type: 'doughnut',
            data: {
                labels: ['Checked Out', 'Available'],
                datasets: [{
                    data: [55, 135],
                    backgroundColor: [primaryYellow, '#f0f0f0'],
                    borderColor: ['#ffffff', '#ffffff'],
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutoutPercentage: 72,      // thin, elegant ring
                rotation: -Math.PI / 2,    // start at top
                legend: {
                    position: 'bottom',
                    labels: {
                        fontSize: 12,
                        fontColor: '#555',
                        boxWidth: 14,
                        padding: 16
                    }
                },
                tooltips: {
                    callbacks: {
                        label: function (item, data) {
                            var label = data.labels[item.index] || '';
                            var value = data.datasets[0].data[item.index] || 0;
                            var total = data.datasets[0].data.reduce(function (acc, v) { return acc + v; }, 0);
                            var pct = ((value / total) * 100).toFixed(1);
                            return label + ': ' + value + ' (' + pct + '%)';
                        }
                    }
                },
                layout: {
                    padding: {
                        top: 5,
                        bottom: 0
                    }
                }
            }
        });

        // Top 5 Most Used Tools
        var ctxTop = document.getElementById('topToolsChart').getContext('2d');
        new Chart(ctxTop, {
            type: 'line',
            data: {
                labels: ['Impact Wrench', 'Torque Wrench', 'Drill', 'Caliper', 'Grinder'],
                datasets: [{
                    label: 'Uses (month)',
                    data: [40, 32, 28, 21, 18],
                    borderColor: primaryYellow,
                    backgroundColor: lightYellow,
                    borderWidth: 2,
                    pointRadius: 4,
                    pointBackgroundColor: primaryYellow,
                    lineTension: 0.25
                }]
            },
            options: {
                legend: { display: false },
                scales: {
                    yAxes: [{
                        ticks: { beginAtZero: true }
                    }]
                }
            }
        });

        // Checked Out Tools - Weekly
        var ctxWeekly = document.getElementById('weeklyCheckoutChart').getContext('2d');
        new Chart(ctxWeekly, {
            type: 'line',
            data: {
                labels: ['W1', 'W2', 'W3', 'W4', 'W5', 'W6', 'W7', 'W8'],
                datasets: [{
                    label: 'Checked Out',
                    data: [10, 14, 19, 22, 26, 28, 30, 33],
                    borderColor: primaryYellow,
                    backgroundColor: lightYellow,
                    borderWidth: 2,
                    pointRadius: 3,
                    pointBackgroundColor: primaryYellow,
                    lineTension: 0.25
                }]
            },
            options: {
                legend: { display: false },
                scales: {
                    yAxes: [{
                        ticks: { beginAtZero: true }
                    }]
                }
            }
        });

        // Maintenance Activity
        var ctxMaint = document.getElementById('maintenanceChart').getContext('2d');
        new Chart(ctxMaint, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Maintenance Jobs',
                    data: [5, 8, 6, 10, 12, 9],
                    backgroundColor: primaryYellow,
                    hoverBackgroundColor: '#ffca28'
                }]
            },
            options: {
                legend: { display: false },
                scales: {
                    yAxes: [{
                        ticks: { beginAtZero: true, stepSize: 2 }
                    }]
                }
            }
        });
    </script>
</body>
</html>
