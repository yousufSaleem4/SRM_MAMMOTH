@model PlusCP.Models.DashboardModel
@{
    ViewBag.Title = "Tool Crib Dashboard Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 3.3.7 CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>

    <style>
        body {
            background-color: #f9fafb;
            font-family: "Helvetica Neue", Arial, sans-serif;
        }

        .navbar-dashboard {
            background-color: #ffffff;
            border-bottom: 1px solid #e5e5e5;
            margin-bottom: 0;
        }

            .navbar-dashboard .navbar-brand {
                font-weight: 600;
                font-size: 20px;
            }

            .navbar-dashboard .navbar-nav > li > a {
                color: #111;
                font-weight: 500;
                padding-top: 18px;
                padding-bottom: 18px;
            }

                .navbar-dashboard .navbar-nav > li > a:hover,
                .navbar-dashboard .navbar-nav > li > a:focus {
                    background-color: transparent;
                    color: #f4b400;
                }

            .navbar-dashboard .navbar-right > li > a {
                font-weight: 600;
            }

        .dashboard-wrapper {
            padding: 25px 40px; /* left & right space */
        }

        .stat-row {
            margin-bottom: 25px;
        }

        .stat-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,.04);
            padding: 18px 20px;
            margin-bottom: 20px;
            border: 1px solid #f1f1f1;
            position: relative;
            overflow: hidden;
        }

            .stat-card:before {
                content: "";
                position: absolute;
                right: -40px;
                top: -40px;
                width: 120px;
                height: 120px;
                background-color: rgba(244, 180, 0, 0.14);
                border-radius: 50%;
            }

            .stat-card .icon {
                font-size: 26px;
                color: #f4b400;
                margin-bottom: 8px;
            }

        .stat-card-title {
            font-size: 13px;
            color: #7a7a7a;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: .06em;
        }

        .stat-card-value {
            font-size: 26px;
            font-weight: 600;
            margin-top: 4px;
            color: #111;
        }

        .panel-dashboard {
            background-color: #ffffff;
            border-radius: 10px;
            border: 1px solid #f1f1f1;
            padding: 18px 20px 10px;
            margin-bottom: 25px;
            box-shadow: 0 4px 10px rgba(0,0,0,.04);
        }

            .panel-dashboard h4 {
                margin-top: 0;
                margin-bottom: 15px;
                font-size: 16px;
                font-weight: 600;
            }

        /* all charts */
        canvas {
            width: 100% !important;
            height: 260px !important;
        }

        /* donut chart: perfectly centered, no weird stretch */
        .chart-donut-wrapper {
            height: 260px;
            max-width: 260px;
            margin: 5px auto 0;
        }

        @@media (max-width: 767px) {
            .dashboard-wrapper {
                padding: 15px;
            }
        }
    </style>
</head>
<body>

    <!-- DASHBOARD -->
    <div class="dashboard-wrapper">
        <div class="container-fluid">

            <!-- COUNTERS (6 cards) -->
            <div class="row stat-row">
                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-user"></span>
                        </div>
                        <p class="stat-card-title">Total Users</p>
                        <p class="stat-card-value" id="totalUsers">0</p>
                    </div>
                </div>

                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-briefcase"></span>
                        </div>
                        <p class="stat-card-title">Total Tools</p>
                        <p class="stat-card-value" id="totalTools">0</p>
                    </div>
                </div>

                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-ok-circle"></span>
                        </div>
                        <p class="stat-card-title">Available</p>
                        <p class="stat-card-value" id="availableTools">0</p>
                    </div>
                </div>

                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-export"></span>
                        </div>
                        <p class="stat-card-title">Checked Out</p>
                        <p class="stat-card-value" id="checkedOutTools">0</p>
                    </div>
                </div>

                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-import"></span>
                        </div>
                        <p class="stat-card-title">Checked In</p>
                        <p class="stat-card-value" id="checkedInTools">0</p>
                    </div>
                </div>

                <!-- NEW CARD: Maintenance Tools Count -->
                <div class="col-sm-6 col-md-2">
                    <div class="stat-card">
                        <div class="icon">
                            <span class="glyphicon glyphicon-wrench"></span>
                        </div>
                        <p class="stat-card-title">Maintenance Tools</p>
                        <p class="stat-card-value" id="maintenanceTools">0</p>
                    </div>
                </div>
            </div>

            <!-- ROW 1 CHARTS -->
            <div class="row">
                <div class="col-md-6">
                    <div class="panel-dashboard">
                        <h4>Tools Distribution</h4>
                        <div class="chart-donut-wrapper">
                            <canvas id="toolsDistributionChart"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="panel-dashboard">
                        <h4>Top Most Used Tools</h4>
                        <canvas id="topToolsChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- ROW 2 CHARTS -->
            <div class="row">
                <div class="col-md-6">
                    <div class="panel-dashboard">
                        <h4>Weekly Tool Check-Out Trend</h4>

                        <div style="display:flex; justify-content:space-between; margin-bottom:10px;">

                            <!-- LEFT BLOCK -->
                            <div>
                                <p style="font-size:16px; margin:0; color:#444;">Tools Checked Out</p>
                                <p style="margin:0; font-size:14px; color:#666;">This Week:</p>
                                <p id="weeklyTotal" style="font-size:32px; font-weight:700; margin:0; color:#1A8F2F;"></p>
                            </div>

                            <!-- RIGHT BLOCK -->
                            <div style="text-align:right;">
                                <p style="font-size:16px; margin:0; color:#444;">% Change From</p>
                                <p style="margin:0; font-size:14px; color:#666;">Last Week</p>
                                <p id="weeklyChange" style="font-size:28px; font-weight:600; margin:0; color:#1A8F2F;"></p>
                            </div>

                        </div>

                        <canvas id="weeklyCheckoutChart"></canvas>

                    </div>
                </div>

                <div class="col-md-6">
                    <div class="panel-dashboard">
                        <h4>Maintenance Issues by Category</h4>

                        <div style="display:flex; justify-content:space-between; padding:5px 20px;">
                            <div>
                                <p style="margin:0; font-size:18px;">Total Repairs </p>
                                <p style="margin: 0; font-size: 17px;">This Month:</p>
                                <h2 id="totalRepairs" style="margin:0; font-weight:bold;">0</h2>
                            </div>

                           
                        </div>


                        <canvas id="maintenanceChart"></canvas>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- jQuery + Bootstrap JS -->
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@

    <script>
        var primaryYellow = '#f4b400';
        var lightYellow = 'rgba(244,180,0,0.20)';

        $(function () {

            // ===========================
            // 1) WIDGET COUNTS + DONUT
            // ===========================
            $.ajax({
                url: '@Url.Action("GetWidgetCounts", "Tool")',
                type: 'GET',
                dataType: 'json',
                success: function (data) {

                    // Safe fallback (agar property missing ho to 0)
                    var totalUsers = data.TotalUsers || 0;
                    var totalTools = data.TotalTools || 0;
                    var available = data.Available || 0;
                    var checkedOut = data.CheckedOut || 0;
                    var checkedIn = data.CheckedIn || 0;
                    var maintenance = data.MaintenanceTools || 0;

                    // Top cards update
                    $('#totalUsers').text(totalUsers);
                    $('#totalTools').text(totalTools);
                    $('#availableTools').text(available);
                    $('#checkedOutTools').text(checkedOut);
                    $('#checkedInTools').text(checkedIn);
                    $('#maintenanceTools').text(maintenance);

                    // Donut chart: Checked Out vs Available
                    var ctxDist = document.getElementById('toolsDistributionChart').getContext('2d');

                    new Chart(ctxDist, {
                        type: 'doughnut',
                        data: {
                            labels: ['Checked Out', 'Available'],
                            datasets: [{
                                data: [checkedOut, available],
                                backgroundColor: [primaryYellow, '#f0f0f0'],
                                borderColor: ['#ffffff', '#ffffff'],
                                borderWidth: 3
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            cutoutPercentage: 72,      // thin, elegant ring
                            rotation: -Math.PI / 2,    // start at top
                            legend: {
                                position: 'bottom',
                                labels: {
                                    fontSize: 12,
                                    fontColor: '#555',
                                    boxWidth: 14,
                                    padding: 16
                                }
                            },
                            tooltips: {
                                callbacks: {
                                    label: function (item, chartData) {
                                        var label = chartData.labels[item.index] || '';
                                        var value = chartData.datasets[0].data[item.index] || 0;
                                        var total = chartData.datasets[0].data.reduce(function (acc, v) { return acc + v; }, 0);
                                        if (total === 0) {
                                            return label + ': ' + value;
                                        }
                                        var pct = ((value / total) * 100).toFixed(1);
                                        return label + ': ' + value + ' (' + pct + '%)';
                                    }
                                }
                            },
                            layout: {
                                padding: {
                                    top: 5,
                                    bottom: 0
                                }
                            }
                        }
                    });
                },
                error: function () {
                    console.log("Error loading widget counts.");
                }
            });

            // ===========================
            // 2) TOP USED TOOLS (LINE)
            // ===========================
            $.ajax({
                url: '@Url.Action("GetTopUsedTool", "Tool")',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var labels = [];
                    var values = [];

                    $.each(data, function (i, item) {
                        labels.push(item.ToolName);
                        values.push(item.UsageCount);
                    });

                    var ctxTop = document.getElementById('topToolsChart').getContext('2d');

                    new Chart(ctxTop, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Uses (period)',
                                data: values,
                                borderColor: primaryYellow,
                                backgroundColor: lightYellow,
                                borderWidth: 2,
                                pointRadius: 4,
                                pointBackgroundColor: primaryYellow,
                                lineTension: 0.25
                            }]
                        },
                        options: {
                            legend: { display: false },
                            scales: {
                                yAxes: [{
                                    ticks: { beginAtZero: true }
                                }]
                            }
                        }
                    });
                },
                error: function () {
                    console.log("Error loading Top Used Tools.");
                }
            });

            // =================================
            // 3) CHECKED OUT WEEKLY (LINE)
            // =================================
            $.ajax({
                url: '@Url.Action("GetCheckedOutWeekly", "Tool")',
                type: 'GET',
                dataType: 'json',
                success: function (data) {

                    let labels = [];
                    let values = [];

                    $.each(data, function (i, item) {
                        labels.push("W" + item.WeekNumber);
                        values.push(item.CheckedOutCount);
                    });

                    // --- Calculation for UI ---
                    let thisWeek = values.length > 0 ? values[values.length - 1] : 0;
                    let lastWeek = values.length > 1 ? values[values.length - 2] : 0;

                    let percent = 0;
                    if (lastWeek > 0)
                        percent = (((thisWeek - lastWeek) / lastWeek) * 100).toFixed(1);

                    $('#weeklyTotal').text(thisWeek);
                    $('#weeklyChange').text((percent >= 0 ? "+" : "") + percent + "%");

                    // --- Chart ---
                    var ctxWeekly = document.getElementById('weeklyCheckoutChart').getContext('2d');

                    new Chart(ctxWeekly, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Checked Out',
                                data: values,
                                borderColor: primaryYellow,
                                borderWidth: 3,
                                pointRadius: 4,
                                pointBackgroundColor: primaryYellow,
                                lineTension: 0.2,
                                fill: false   // ⭐ area removed
                            }]
                        },
                        options: {
                            legend: { display: false },
                            scales: {
                                yAxes: [{
                                    ticks: { beginAtZero: true }
                                }]
                            }
                        }
                    });

                },
                error: function () {
                    console.log("Error loading weekly checkout stats.");
                }
            });

            // ===========================
            //   MAINTENANCE ACTIVITY
            // ===========================
            $.ajax({
                url: '/Tool/GetMaintenanceActivity',
                type: 'GET',
                dataType: 'json',
                success: function (data) {

                    $("#totalRepairs").text(data.TotalRepairs);

                    var labels = ["Repair", "Broken", "Calibration"];
                    var values = [data.Repair, data.Broken, data.Calibration];

                    var colors = [
                        "#f4b400",
                        "#f4b400",
                        "#f4b400"
                    ];

                    var ctxMaint = document.getElementById('maintenanceChart').getContext('2d');

                    new Chart(ctxMaint, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                data: values,
                                backgroundColor: colors,
                                borderWidth: 0
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            legend: { display: false },
                            scales: {
                                yAxes: [{
                                    ticks: { beginAtZero: true }
                                }]
                            }
                        }
                    });
                }
            });



        });
    </script>

</body>
</html>
