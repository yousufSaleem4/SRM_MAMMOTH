<script type="text/javascript">
    var isAdmin = '@ViewBag.isAdmin';
    var old_browser_height = 0;
    function resize_grid_height() {
        var new_browser_height = window.innerHeight;
        var grid_height = $('.dataTables_scrollBody').height();
        if (isNaN(grid_height)) {
            return;
        }
        if (new_browser_height > old_browser_height) {
            var difference = new_browser_height - old_browser_height;
            grid_height += difference;
        }
        else {
            var difference = old_browser_height - new_browser_height;
            grid_height -= difference;
        }
        $('.dataTables_scrollBody').css('height', grid_height + 'px');
        old_browser_height = new_browser_height;
    }
    function get_initial_attributes() {
        old_browser_height = window.innerHeight;
    }
</script>
